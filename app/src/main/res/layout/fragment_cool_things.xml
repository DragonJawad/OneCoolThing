<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:onecoolthing="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent">

    <!-- Circle progress loading anim -->
    <ProgressBar
        android:id="@+id/progressBar1"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        android:indeterminate="true"
        android:indeterminateDrawable="@drawable/loading_spinner"
        />

    <!-- Background of the cool thing -->
    <ImageView
        android:id="@+id/background"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="fitXY"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!-- View to simply force the overlay only
            half of height -->
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            />

        <!-- Transparent overlay -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@drawable/greydiant_568h"
            android:scaleType="fitXY"/>

        </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="@dimen/margin_general"
        android:layout_marginRight="@dimen/margin_general"
        android:layout_marginEnd="@dimen/margin_general"
        >

        <!-- Empty spacer view -->
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            />

        <!-- Displays title of cool thing -->
        <edu.umich.engin.cm.onecoolthing.Util.CustomFontTextView
            android:id="@+id/title"
            onecoolthing:fontName="Nunito-Regular.ttf"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:textSize="@dimen/text_cool_titles"
            android:textColor="@color/white"
            android:gravity="end"
            />

    </LinearLayout>
</RelativeLayout>