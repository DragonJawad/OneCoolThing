<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue226"
    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?android:actionBarSize"
        android:layout_marginLeft="@dimen/margin_general"
        android:layout_marginRight="@dimen/margin_general"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_description"
            android:textColor="@color/white"
            android:textSize="@dimen/text_normal"
            />

        <TextView
            android:id="@+id/text_reenable_tutorial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_click_tutorial"
            android:textColor="@color/white"
            android:textSize="@dimen/text_normal"/>

        <TextView
            android:id="@+id/text_privacypolicy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_click_privacypolicy"
            android:textColor="@color/white"
            android:textSize="@dimen/text_normal"/>

    </LinearLayout>
</RelativeLayout>